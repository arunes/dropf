<Window x:Class="dropf.CheckUpdates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lang="clr-namespace:dropf"
        Title="{x:Static lang:Lang.CheckForUpdatesTitle}" Height="249" Width="341" Icon="/dropf;component/dropf.ico" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="113" HorizontalAlignment="Left" Margin="12,60,0,0" Name="txtWhatsNew" VerticalAlignment="Top" Width="305" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AllowDrop="False" TextWrapping="Wrap" />
        <Button Content="{x:Static lang:Lang.Close}" Height="23" HorizontalAlignment="Left" Margin="12,181,0,0" Name="btnClose" VerticalAlignment="Top" Width="75" IsCancel="True" Click="btnClose_Click" />
        <Button Content="{x:Static lang:Lang.Download}" Height="23" HorizontalAlignment="Left" Margin="242,181,0,0" Name="btnDownload" VerticalAlignment="Top" Width="75" IsEnabled="False" />
        <TextBlock Height="42" HorizontalAlignment="Left" Margin="12,12,0,0" Name="tbDescription" Text="{x:Static lang:Lang.CheckingUpdates}" VerticalAlignment="Top" Width="305" TextWrapping="Wrap" />
    </Grid>
</Window>
